	// 	if (_feat_iter % 5 == 0 && )
	// 		//next
	// 		GFPage(gump, gump.cur_page+1);
	// 		//previous
	// 	else
	// 		//add separator
	// 	endif
	// 	sleepms(2);
	// endforeach
endfunction