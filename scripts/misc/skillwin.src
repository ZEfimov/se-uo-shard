function buildGump(who)
	var gump := GFCreateGump();
	GFDisposable(gump, 0);
	GFSetID(gump, GUMPID_SKILLLIST);
	GFAddButton(gump, 501, 470, 2445, 2445, GF_CLOSE_BTN, 70); //Comprar Talento
