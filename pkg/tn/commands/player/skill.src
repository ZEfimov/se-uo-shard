	if(delay)
		if(delay > ReadGameClock())
			SendSysMessage(who, "Você ainda esta fazendo outra coisa.");
			return;
		endif
	endif

	skillname[" "] := "_";
	skillname[" "] := "_";
	skillname[" "] := "_";
	
	if(!AP_GetAttributeCfgElem(skillname))
		SendSysMessage(who, "Pericia inexistente!");
		return;
	endif
