
use uo;
use vitals;

include ":attributes:vitals";
include ":attributes:attributes";
include "include/say";

program manobra(who, name)

	if (GetObjProperty(who, name) == error)
		SendSysMessage(who, "Você não conhece esta manobra.");
		return 1;
	endif

	if (!who.warmode)
		SendSysMessage(who, "Você não esta atacando ninguem.");
		return 1;
	endif
	
	if (!who.opponent)
		SendSysMessage(who, "Você não esta atacando ninguem.");
		return 1;
	endif

	var lastTime := Cint(GetObjProperty(who, "#lastmovement"));
	
	if (lastTime)
		if (lastTime + 180 >  ReadGameClock())
			SendSysMessage(who, "Você não pode fazer outra manobra de combate agora.");
			return 1;
		endif
	endif

	name := lower(name);
	
	if (name == "tiromultiplo")
		var ammo := GetObjProperty(who.weapon, "ammo");
		if (ammo == error)
			SendSysMessageEx(who, "Você precisa escolher o tipo de projetil dessa arma.", SSM_FAIL);
			return 1;
		endif
	endif

	if ( (name == "tiromultiplo") || (name == "desarmar") || (name == "fintar") || (name == "duplo") || (name == "giratorio"))
		if (GetVital(who, MANA) > 40)
			AP_ConsumeVital(who, MANA, 40);
		else
			SendSysMessage(who, "Você não consegue fazer esta manobra.");
			return 1;
		endif
		SendSysMessage(who, "Você tenta executar a manobra.");
		SetObjProperty(who, "movement",  ":combat:movementScripts/"+name);
		SetObjProperty(who, "#lastmovement", ReadGameClock());
	else
		SendSysMessage(who, "Você deve digitar a manobra de combate: tiromultiplo, desarmar, fintar, duplo ou giratorio.");
	endif
		
	return 1;

endprogram
