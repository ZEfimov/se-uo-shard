use uo;
use cfgfile;

include ":gumps:gumps";
include "include/say";
include ":charactercreation:feats";
include ":charactercreation:characters";

program reset(who, params, uc_text)
	var item;
	if (who.cmdlevel >= 4)
		SendSysMessageEx(who, "Escolha o alvo.", SSM_REQUEST);
		item := target(who);
	else
		item := who;
	endif
	
	params := cchrz(uc_text);

	if (!item)
		return;
	endif
	
	LearnFeat(item, params, 0, 1);
endprogram
