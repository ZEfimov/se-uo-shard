      sleepms(2);
   endforeach

   if (quest.conditions.size() < 10)
      GFAddButton(gump, 546, 155+pos_y, 2361, 2361, GF_CLOSE_BTN, GF_CONDITION_ADD);
      GFTextLine(gump, 480, 150+pos_y, 1152, "Adicionar");
