use uo;
use os;
use cfgfile;
use vitals;

include "include/client";
include "include/say";
include ":gumps:yesno";

program sobrenome(who)
	var sobrenome := GetObjProperty(who, "sobrenome");
	if (!sobrenome)
		var nome := splitwords(who.name);
		SetName(who, nome[1]);
		
		SetObjProperty(who, "sobrenome", nome[2]);
	else
		EraseObjProperty(who, "sobrenome");
		SetName(who, who.name + " " + sobrenome);
	endif
endprogram

