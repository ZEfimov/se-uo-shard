program walkOn(who, trap)
	var spell := GetObjProperty(trap, "spell");
	
	if (who.concealed)
		return;
	endif
	
	case (spell)
		1: HealAndDestroy(who, trap);
		2: ParalyzeAll(who, trap);
      default: ForceDirection(who, 0);
	endcase
