use uo;
use os;

program targetHeal(info)
   var mobile := info[1];
   var spellinfo := info[2];
   var targ := info[3];
   info := 0;

   SetObjProperty(mobile, "cleric_spell", targ.serial);
   SendSystemReport(mobile, "Alvo selecionado para benção de cura.");
   SendSystemReport(targ, "Recebendo cura de "+mobile.name);
endprogram