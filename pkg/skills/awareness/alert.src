use os;
use uo;

include ":awareness:awareness";
include "include/say";

program alert(mobile)
	while ( mobile )
		SetName(mobile, mobile.name);
		if ( mobile.connected && !mobile.cmdlevel && ListHostiles(mobile, 6).size() == 0)
			examinarArea(mobile, +4);
		endif
		sleep(15);
	endwhile
	
	return 1;
endprogram
