use uo;
use os;
use polsys;
use datafile;

include ":commands:possess";
include ":gumps:gump_prompts";

program textcmd_possess( me )

	set_critical(1);

	var npc := Target(me, TGTOPT_NOCHECK_LOS+TGTOPT_NEUTRAL);
	if (!npc.npctemplate)
		sendsysmessage(me, "That is not an npc!");
		return;
	endif
	if (YesNo(me, "Você deseja ativar o ignorenpcs (mobs não te atacam)?", "Sim.", "Nao."))
		SetObjProperty(me, "ignorenpcs", 1);
	endif
	
	possess(me, npc);

endprogram
