use uo;
use os;
include ":gumps:yesno";
include "include/say";
include ":charactercreation:habilidades";

program textcmd_openPack(who)
	var targ;
	if (TypeOf(who) == "Array")
		targ := who[2];
		who := who[1];
	endif

	if (!targ)
		SendSysMessageEx(who, "Selecione o personagem que você deseja revistar.", SSM_REQUEST);
		targ := Target(who);
	endif
	
	if ( !targ )
		SendSysMessageEx(who, "Cancelled.", SSM_FAIL);
		return 0;
	elseif ( !targ.IsA(POLCLASS_MOBILE) )
		SendSysMessageEx(who, "Alvo invalido.", SSM_FAIL);
		return 0;
	elseif ( targ.npctemplate )
		SendSysMessageEx(who, "Você so pode revistar jogadores.", SSM_FAIL);
		return 0;
	elseif ( !targ.backpack )
		SendSysMessageEx(who, "Alvo não possui uma bolsa.", SSM_FAIL);
		return 0;
	elseif ( Distance(who, targ) > 1 )
		SendSysMessageEx(who, "Muito longe.", SSM_FAIL);
		return 0;
	endif

	var perm := YesNo(targ, "Você permite que "+who.name+" lhe reviste?" , "Sim.", "Não.");

	if (!perm)	
		SendSysMessageEx(who, targ.name+" não permitiu que você o revistasse.", SSM_INFO);
	else
		var item;
		if (TemHabilidade(targ, "Ocultar Objeto") && !GetObjProperty(targ, "ocultando"))
			var esconde := YesNo(targ, "Você deseja esconder algum objeto?" , "Sim.", "Não.");
			if (esconde)
				item := Target(targ);
				var ok := 0;
				var cont := item.container;
				while (cont)
					if (cont == targ.backpack)
						ok := 1;
						break;
					endif
					cont := cont.container;
				endwhile
				if (ok)
					item.invisible := 1;
					item.movable := 0;
					SetObjProperty(targ, "ocultando", item.serial);
				else
					SendSysMessageEx(who, "O item deve estar na sua mochila.", SSM_FAIL);
				endif
			endif
		endif
		PrintText(who, "*revistando "+targ.name+"*");
		SendViewContainer(who, targ.backpack);
		
		var x := who.x;
		var y := who.y;
		detach();
		while ((who.x == x && who.y == y) || Distance(who,targ) < 4)
			sleep(1);
		endwhile
		if (GetObjProperty(targ, "ocultando"))
			item := SystemFindObjectBySerial(GetObjProperty(targ, "ocultando"));
			item.invisible := 0;
			item.movable := 1;
			SendSysMessageEx(targ, who.name+" parou a revista, "+item.desc+" não esta mais oculto.", SSM_INFO);
			EraseObjProperty(targ, "ocultando");
		endif
	endif
	
	return 1;
endprogram
