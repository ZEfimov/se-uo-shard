use uo;
use os;

include "include/client";
include ":attributes:attributes";
include "include/say";

program fome(who)

   var total :=  CInt(AP_GetVital(who, "Hunger") / 60);
   var msg;

   case (total)
	6 : msg := "Você esta correndo perigo de vida";
	5 : msg := "Você esta faminto.";
	4 : msg := "Você esta com fome.";
	3 : msg := "Você esta satisfeito.";
	2 : msg := "Você esta cheio.";
	1 : msg := "Você esta muito bem alimentado.";
	0 : msg := "Você esta muito bem alimentado.";
   endcase

   SendSysMessageEx(who, " " + msg, SSM_INFO);

endprogram
