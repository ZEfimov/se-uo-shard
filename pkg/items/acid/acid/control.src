use uo;
use os;
include ":acid:acid";

program ControlScript(acid)
   var owner := GetObjProperty(acid, "owner");
   if (owner)
      owner := SystemFindObjectBySerial(owner);
   endif

   var i := 0;
   while(acid && i <= 10)
      var mobiles := ListMobilesNearLocation( acid.x, acid.y, acid.z, 0);
      foreach mob in mobiles
         sleepms(2);
         if (owner)
            if (mob in owner.party)
               continue;
            endif
         endif
         if( !DealAcidDamage(acid, mob, acid) )
            DealAcidDamage(acid, mob, acid, "5d2");
         endif
      endforeach
      sleep(10);
      i+=1;
   endwhile
	DestroyItem(acid);
endprogram
